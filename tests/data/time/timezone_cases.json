      "platform_offsets acts as a placeholder for Linux/macOS/Windows parity logs."
    ]
  },
  "cases": [
    {
      "name": "UTC",
      "offset_seconds": 0,
      "aliases": ["UTC", "utc", "Z", "GMT", "Etc/UTC"],
      "platform_offsets": {
        "linux-gnu": 0,
        "macos": 0,
        "windows-msvc": 0
      }
    },
    {
      "name": "UTC+09:00",
      "offset_seconds": 32400,
      "aliases": ["UTC+9", "UTC+09", "UTC+09:00", "+09:00", "utc+0900"],
      "platform_offsets": {
        "linux-gnu": 32400,
        "macos": 32400,
        "windows-msvc": 32400
      }
    },
    {
      "name": "UTC-05:30",
      "offset_seconds": -19800,
      "aliases": ["UTC-5:30", "UTC-0530", "-05:30", "utc-530"],
      "platform_offsets": {
        "linux-gnu": -19800,
        "macos": -19800,
        "windows-msvc": -19800
      }
    }
  ],
  "convert_cases": [
    {
      "timestamp": {"seconds": 1700000000, "nanos": 0},
