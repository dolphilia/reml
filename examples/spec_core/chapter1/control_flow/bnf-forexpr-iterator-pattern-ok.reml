module Spec.Core.Chapter1.ControlFlow.ForPatternOk

use Core.Prelude

// BNF: ForExpr（docs/spec/1-5-formal-grammar-bnf.md §4）
fn sum_pairs(pairs: Array<(Int, Int)>) -> Int {
  var acc: Int = 0
  for (left, right) in pairs {
    acc := acc + left + right
  }
  acc
}

fn main() -> Int {
  sum_pairs([(1, 2), (3, 4), (5, 6)])
}
