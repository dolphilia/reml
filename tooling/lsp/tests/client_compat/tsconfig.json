{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node", "vitest/globals"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
